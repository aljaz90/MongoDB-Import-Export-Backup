<%- include('partials/header') %>

<div class="connect">
    <div class="connect--title">
        Connect to a MongoDB instance
    </div>
    <form class="connect--form">
        <div class="input_group connect--form--input_group">
            <input type="text" placeholder="MongoDB URL" class="input connect--form--input">
            <input type="submit" value="Connect" class="btn connect--form--input-submit">
        </div>
    </form>    
    <div class="connect--status">
        <div class="connect--status--title">
            Status
        </div>
        <div class="connect--status--icon connect--status--icon-disconnected">            
        </div>
        <div class="connect--status--text">
            Disconnected
        </div>
    </div>
</div>
<div class="databases">
    <div class="databases--title">
        Databases
    </div>
    <div class="databases--disabled">
        <img draggable="false" src="/icons/lock-closed-outline.svg" alt="Lock closed">
    </div>
    
</div>
<div class="collections">
    <div class="collections--title">
        Collections
    </div>

</div>
<div class="actions">
    <div class="btn actions--item actions--item-export">
        Export
    </div>
    <div class="btn actions--item actions--item-import">
        Import
    </div>
</div>

<%- include('partials/footer') %>